@model IEnumerable<QueenOfApostlesRenewalCentre.Models.News>

@{
    ViewData["Title"] = "Reorder News";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Reorder News</h2>

<form asp-action="Reorder" method="post">
    @Html.AntiForgeryToken()
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Current Order</th>
                <th>New Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.Title</td>
                    <td>@news.SortOrder</td>
                    <td>
                        <input type="number" name="sortedIds" value="@news.NewsId" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Order</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
