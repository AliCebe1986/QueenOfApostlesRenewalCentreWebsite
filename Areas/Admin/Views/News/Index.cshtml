@model IEnumerable<QueenOfApostlesRenewalCentre.Models.News>

@{
    ViewData["Title"] = "Manage News";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Manage News</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New News</a>
<a asp-action="Reorder" class="btn btn-secondary mb-3">Reorder News</a>

<div class="row">
    @foreach (var news in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    @news.Title
                </div>
                <div class="card-body">
                    <p class="card-text">@((news.Content.Length > 100) ? news.Content.Substring(0, 100) + "..." : news.Content)</p>
                    <p><small class="text-muted">Published: @news.PublishedDate.ToString("g")</small></p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@news.NewsId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@news.NewsId" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
