@model QueenOfApostlesRenewalCentre.Models.News

@{
    ViewData["Title"] = "Delete News";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete News</h2>

<h3>Are you sure you want to delete this news item?</h3>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Content</p>
    <p><strong>Published:</strong> @Model.PublishedDate.ToString("g")</p>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="NewsId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
