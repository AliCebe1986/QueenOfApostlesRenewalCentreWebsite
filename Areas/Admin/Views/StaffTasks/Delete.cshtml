@model QueenOfApostlesRenewalCentre.Models.StaffTask

@{
    ViewData["Title"] = "Delete Task";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
    <p><strong>Due Date:</strong> @(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("g") : "N/A")</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="TaskId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-staffId="@Model.StaffId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
