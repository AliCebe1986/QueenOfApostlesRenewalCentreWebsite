@model QueenOfApostlesRenewalCentre.Models.Room

@{
    ViewData["Title"] = "Delete Room";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this room?</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-3">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>
        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type</dd>
        <dt class="col-sm-3">Shower Option</dt>
        <dd class="col-sm-9">@Model.WithShower ? "With Shower" : "Without Shower"</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.IsReserved ? "Reserved" : "Available"</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="RoomId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
