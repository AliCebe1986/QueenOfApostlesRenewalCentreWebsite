@model QueenOfApostlesRenewalCentre.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-3">Guest Name</dt>
        <dd class="col-sm-9">@Model.GuestName</dd>
        <dt class="col-sm-3">Room</dt>
        <dd class="col-sm-9">@Model.Room?.Name</dd>
        <dt class="col-sm-3">Arrival</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-3">Departure</dt>
        <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
        <dt class="col-sm-3">Reservation Type</dt>
        <dd class="col-sm-9">@Model.ReservationType</dd>
    </dl>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
