@model IEnumerable<QueenOfApostlesRenewalCentre.Models.RoomCleaning>

@{
    ViewData["Title"] = "Cleaning Schedule";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Cleaning Schedule</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Cleaning Entry</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Group Name</th>
            <th>Departure Date</th>
            <th>Cleaning Status</th>
            <th>Cleaner Name</th>
            <th>Cleaning Date</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomNumber</td>
                <td>@item.GroupName</td>
                <td>@item.DepartureDate.ToShortDateString()</td>
                <td>@item.CleaningStatus</td>
                <td>@item.CleanerName</td>
                <td>@(item.CleaningDate.HasValue ? item.CleaningDate.Value.ToString("g") : "")</td>
                <td>@item.AdditionalNotes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
