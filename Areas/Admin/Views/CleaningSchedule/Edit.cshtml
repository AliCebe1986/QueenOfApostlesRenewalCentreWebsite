@model QueenOfApostlesRenewalCentre.Models.RoomCleaning

@{
    ViewData["Title"] = "Edit Cleaning Entry";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit Cleaning Entry</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="RoomNumber" class="form-label">Room Number</label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GroupName" class="form-label">Group Name</label>
        <input asp-for="GroupName" class="form-control" />
        <span asp-validation-for="GroupName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartureDate" class="form-label">Departure Date</label>
        <input asp-for="DepartureDate" type="date" class="form-control" />
        <span asp-validation-for="DepartureDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CleaningStatus" class="form-label">Cleaning Status</label>
        <input asp-for="CleaningStatus" class="form-control" />
        <span asp-validation-for="CleaningStatus" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CleanerName" class="form-label">Cleaner Name</label>
        <input asp-for="CleanerName" class="form-control" />
        <span asp-validation-for="CleanerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CleaningDate" class="form-label">Cleaning Date</label>
        <input asp-for="CleaningDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="CleaningDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AdditionalNotes" class="form-label">Additional Notes</label>
        <textarea asp-for="AdditionalNotes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
