@model QueenOfApostlesRenewalCentre.Models.RoomCleaning

@{
    ViewData["Title"] = "Delete Cleaning Entry";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete Cleaning Entry</h2>

<h3>Are you sure you want to delete this cleaning entry?</h3>

<div>
    <h4>@Model.RoomNumber - @Model.GroupName</h4>
    <dl class="row">
        <dt class="col-sm-3">Departure Date</dt>
        <dd class="col-sm-9">@Model.DepartureDate.ToShortDateString()</dd>
        <dt class="col-sm-3">Cleaning Status</dt>
        <dd class="col-sm-9">@Model.CleaningStatus</dd>
        <dt class="col-sm-3">Cleaner Name</dt>
        <dd class="col-sm-9">@Model.CleanerName</dd>
        <dt class="col-sm-3">Cleaning Date</dt>
        <dd class="col-sm-9">@Model.CleaningDate?.ToString("g")</dd>
        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.AdditionalNotes</dd>
    </dl>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
