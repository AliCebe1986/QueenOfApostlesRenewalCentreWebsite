<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staff Dashboard</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
          crossorigin="anonymous">
    <!-- Custom Admin CSS (you can reuse this if desired) -->
    <link rel="stylesheet" href="~/css/admin.css" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }
        #wrapper {
            display: flex;
            width: 100%;
            transition: all 0.3s ease;
        }
        #sidebar-wrapper {
            min-width: 250px;
            max-width: 250px;
            background: linear-gradient(135deg, #007bff, #0056b3); /* blue gradient for staff */
            color: #fff;
            transition: all 0.3s ease;
        }
        #sidebar-wrapper .sidebar-heading {
            font-size: 1.5rem;
            padding: 1.5rem;
            background: #004085;
        }
        #sidebar-wrapper .list-group-item {
            background: none;
            border: none;
            color: #fff;
            padding: 0.75rem 1.25rem;
        }
        #sidebar-wrapper .list-group-item:hover,
        #sidebar-wrapper .list-group-item.active {
            background: rgba(255, 255, 255, 0.1);
        }
        #page-content-wrapper {
            width: 100%;
            padding: 2rem;
        }
        .toggled #sidebar-wrapper {
            margin-left: -250px;
        }
        footer {
            background: #004085;
            color: #fff;
            padding: 1rem 0;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4">Staff Dashboard</div>
            <div class="list-group list-group-flush">
                <a href="/Staff/StaffDashboard/Index" class="list-group-item list-group-item-action active">Dashboard</a>
                <a href="/Staff/StaffDashboard/CleaningTasks" class="list-group-item list-group-item-action">Cleaning Tasks</a>
                <a href="/Staff/StaffDashboard/Profile" class="list-group-item list-group-item-action">Profile</a>
                <a href="/Staff/StaffDashboard/Reports" class="list-group-item list-group-item-action">Reports</a>
            </div>
        </div>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-4">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/Staff/StaffDashboard/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Staff/StaffDashboard/Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Identity/Account/Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="text-center">
        <div class="container">
            <span>© 2025 QUEEN OF APOSTLES</span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoA6V+YztxZf6O8bW1E1vCqv9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
